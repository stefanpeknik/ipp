#!/bin/bash

# Set the name of the output file
output_file="parse.php"

# Remove the output file if it already exists
if [ -e "$output_file" ]; then
    rm "$output_file"
fi

# Loop through all PHP files in the current directory
for file in *.php; do
    # Skip the parse.php file
    if [ "$file" = "parse.php" ]; then
        continue
    fi

    # Get the content of the file, skipping the first line
    content=$(tail -n +2 "$file")

    # Append the content to the output file
    echo "$content" >> "$output_file"
done